
@{
    ViewBag.Title = "Dangky";
}

<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td>@Html.TextBox("HotenKH") @ViewData["Loi1"])</td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @ViewData["Loi2"])</td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>@Html.TextBox("Matkhau") @ViewData["Loi3"])</td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại:</td>
            <td>@Html.TextBox("Matkau") @ViewData["Loi4"])</td>
        </tr>
        <tr style="height:40px">
            <td>Điện thọi:</td>
            <td>@Html.TextBox("Dienthoai") @ViewData["Loi6"])</td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh:</td>
            <td>
                <input type="date" name="NgaySinh"/>
            </td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký"
            </td>
        </tr>
    }
</table>

